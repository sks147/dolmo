{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "sourceMap": false,
    "rootDir": "./src/scripts/",
    "outDir": "./dist/scripts/",
    "noEmitOnError": true,
    "removeComments": true,
  },
  "include": [
    "./src/scripts/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}